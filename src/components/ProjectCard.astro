---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  link: string;
  span?: string; // For bento grid: col-span-1, col-span-2, etc.
}

const { title, description, image, tags, link, span = "col-span-1" } = Astro.props;
---

<article class={`group relative flex flex-col overflow-hidden rounded-2xl bg-card-bg border border-white/5 shadow-sm transition-all duration-300 hover:shadow-primary/25 hover:shadow-lg hover:-translate-y-1 ${span}`}>

  <div class="relative h-48 w-full overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent z-10"></div>
    <img 
      src={image} 
      alt={title} 
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
  </div>

  <!-- Content -->
  <div class="flex flex-1 flex-col justify-between p-5 z-20">
    <div>
        <div class="flex flex-wrap gap-2 mb-3">
            {tags.map((tag) => (
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/5 text-gray-300 border border-white/10">
                {tag}
            </span>
            ))}
        </div>
        <h3 class="text-xl font-bold text-white mb-2 group-hover:text-primary transition-colors">
            {title}
        </h3>
        <p class="text-sm text-gray-400 line-clamp-3">
            {description}
        </p>
    </div>

    <div class="mt-4 flex items-center text-sm font-medium text-primary">
      Ver proyecto
      <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>
  </div>
</article>