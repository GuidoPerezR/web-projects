---
interface Props {
  title: string;
  subtitle?: string;
  id?: string;
}

const { title, subtitle, id } = Astro.props;
---

<div class="mb-12 text-center md:text-left" id={id}>
  <h2 class="text-3xl md:text-4xl font-bold text-white mb-2 tracking-tight">
    {title}
  </h2>
  {subtitle && (
    <div class="h-1 w-40 bg-primary rounded-full mx-auto md:mx-0 mb-4"></div>
    <p class="text-lg text-gray-400 max-w-2xl mx-auto md:mx-0">
      {subtitle}
    </p>
  )}
</div>
